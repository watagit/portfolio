---
import type { Education } from "~/domain/education";

interface Props {
  education: Education;
}

const { education } = Astro.props;
---

<div class="flex flex-col gap-2">
  <div>
    <h2>{education.universityName}</h2>
    <p class="text-xs leading-5">{education.period}</p>
  </div>
  <p class="leading-6">{education.description}</p>
</div>
